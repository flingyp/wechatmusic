<scroll-view hidden="{{isLyricShow}}" class="lyric-scroll" scroll-top="{{scrollTop}}" scroll-with-animation scroll-y>
  <view class="lyric-panel">
    <block wx:for="{{lrcList}}" wx:key="id">
      <view class="lyric {{index==nowLyricIndex? 'hightlight-lyric': ''}}">{{item.lrc}}</view>
    </block>
  </view>
</scroll-view>