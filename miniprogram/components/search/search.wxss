.container{
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  position: relative;
}

.bar {
  flex: 1;
  height: 68rpx;
  font-size: 28rpx;
  border-radius: 50px;
  background-color: #f5f5f5;
  padding-left: 60rpx;
  margin-right: 20rpx;
}

.search {
  width: 100rpx !important;
  min-height: 50rpx !important;
  padding: 15rpx !important;
  box-sizing: border-box;
  background: #d43c33;
  color: #fff;
  font-size: 24rpx;
}

.in-bar{
  color: #999;
}

.find{
  position: absolute;
  top: 50%;
  transform: translate(16rpx, -50%);
  color: #9f9f9f;
}