.detail-container{
  height: 320rpx;
  opacity: .4;
  filter: blur(30rpx);
}

.detail-mask{
  position: absolute;
  width: 100%;
  height: 320rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;
}

.detail-info{
  display: flex;
  align-items: center;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 320rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.detail-img{
  width: 280rpx;
  height: 280rpx;
  margin-right: 24rpx;
  border-radius: 6rpx;
}

.detail{
  flex-grow: 1;
  width: 0;
  line-height: 60rpx;
}

.detail-nm{
  font-size: 36rpx;
  font-weight: 400;
  color: #fff;
}